<% if @gossip.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  Tu as mal rempli le formulaire. Réessaye !
</div>
<% else %>
<% end %>

<div class="container w-50">
<h1 class="pt-5"> Crée ton Gossip!</h1>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', @gossip.title, class: 'form-control',  placeholder: "ex : Jenna aime les chibres" %>
    </div>
    <div class="form-group">
      <%= label_tag 'Content' %>
      <%= text_area_tag 'content', @gossip.content, class: 'form-control', placeholder: "ex : Elle en mange 6 fois par jour" %>
    </div>

      <%= submit_tag "Publier", class: 'btn btn-default btn-dark text-light btn-submit' %>
    <% end %>
</div>

