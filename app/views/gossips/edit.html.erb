<% if @gossip.errors.any? %>
<div class="alert alert-danger text-center" role="alert">
  Une erreur s'est produite, rééssaye !
</div>
<% else %>
<% end %>

<div class="container mt-3">
  <h1 class="pt_5">Edit ce Gossip !</h1>
  <%= form_for @gossip do |f| %>
    <div class="form-group">
      <label>Titre du Gossip</label>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Contenu du Gossip </label>
        <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-dark text-light">Modifier le Gossip</button>
      <a href="<%= gossips_path %>" class="btn btn-default">Revenir à l'accueil</button>
    </div>
  <% end %>
</div>