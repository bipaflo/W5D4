<div class="container mb-5 w-25">
<h1 class="pt-3"> Login</h1>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class="form-group">
      <%= label_tag 'Email' %>
      <%= email_field_tag(:email, "", class: 'form-control',  placeholder: "ex : dabigwoman@example.com") %>
    </div>
    <div class="form-group">
      <%= label_tag 'Mot de Passe' %>
      <%= password_field_tag(:password, "", class: 'form-control') %>
    </div>
      <%= submit_tag "Log In", class: 'btn btn-default btn-dark text-light btn-submit' %>
    <% end %>
</div>
